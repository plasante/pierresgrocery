<div class="row">
	<div class="col-md col-md-offset-4 text-center">
		<h2>Inscription</h2>
		
		<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
		  <%= devise_error_messages! %>
		
		  <div class="form-group">
		    <%= f.text_field :fullname, autofocus: true, autocomplete: "fullname", class: "form-control", placeholder: "Nom complet" %>
		  </div>
		  
		  <div class="form-group">
		    <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "Addresse e-mail" %>
		  </div>
		
		  <div class="form-group">
		  	<br />
		    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Creer Mot de passe" %>
		  </div>
		
		  <div class="actions">
		    <%= f.submit "Inscription", class: "btn btn-primary" %>
		  </div>
		<% end %>
	</div>
</div>
